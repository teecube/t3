<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

	<body>
		<menu name="Reports" ref="reports" />
		
		<menu name="${ecosystemName}">
			<item name="Current versions" href="${repositorySiteURL}/current-versions.html" />
			<item name="" />
			<item name="TIC" href="${repositorySiteURL}/tic/index.html" />
			<item name="TAC" href="${repositorySiteURL}/tac/index.html" />
			<item name="TOE" href="${repositorySiteURL}/toe/index.html" />
		</menu>
	</body>

	<custom>
		<reflowSkin>
			<protocolRelativeURLs>false</protocolRelativeURLs>
			<absoluteResourceURL>${repositorySiteURL}</absoluteResourceURL>

			<brand>
				<name>
		          <![CDATA[
		          <style>.navbar .brand { padding: 5px 20px;}</style><a class="brand" href="${repositorySiteURL}/index.html">${ecosystemNameHighlight2}</a><span class="brand" style="padding: 5px 5px;">/</span><a class="brand" href="${repositorySiteURL}/${project.artifactId}/index.html">${toeDisplayedName}</a>
		          ]]>
				</name>
			</brand>
			<slogan>${toeSlogan}</slogan>

			<pages>
				<index>
					<titleTemplate>${ecosystemName}</titleTemplate>
					<markPageHeader>false</markPageHeader>
					<sections>
						<body />
						<thumbs>2</thumbs>
					</sections>
				</index>
			</pages>
		</reflowSkin>
	</custom>

	<bannerLeft>
		<name>
          <![CDATA[
          ${toeDisplayedName}
          ]]>
		</name>
		<href>./index.html</href>
	</bannerLeft>

</project>