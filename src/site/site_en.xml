<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

	<body>
		<head>
			<link rel="stylesheet" href="$resourcePath/css/github.min.css"/>
		</head>

		<menu name="Documentation">
			<item name="Installation" href="installation.html" />
			<item name="Configuration" href="configuration.html" />
			<item name="" />
			<item name="FAQ" href="faq.html" />
			<item name="Naming conventions" href="naming-conventions.html" />
		</menu>

		<menu name="${ecosystemName}">
			<item name="Current versions" href="${repositorySiteURL}/current-versions.html" />
			<item name="" />
			<item name="TIC" href="${repositorySiteURL}/${ticURLBase}/index.html" />
			<item name="TAC" href="${repositorySiteURL}/${tacURLBase}/index.html" />
			<item name="TOE" href="${repositorySiteURL}/${toeURLBase}/index.html" />
		</menu>
	</body>

	<publishDate position="bottom" format="yyyy-MM-dd"/>
	<version position="bottom"/>

	<custom>
		<reflowSkin>
			<localResources>true</localResources>

			<absoluteResourceURL>${repositorySiteURL}</absoluteResourceURL>
			<protocolRelativeURLs>false</protocolRelativeURLs>

			<theme>site</theme>

			<highlightJs>true</highlightJs>
			<imgLightbox>true</imgLightbox>
			<bootstrapCSS>true</bootstrapCSS>
			<smoothScroll>true</smoothScroll>

			<titleTemplate>%2$s | %1$s</titleTemplate>

			<toc>false</toc>
			<tocTopMax>6</tocTopMax>
			<skinAttribution>false</skinAttribution>

			<brand></brand>
			<slogan><![CDATA[${ecosystemSlogan}]]></slogan>

			<bottomNav maxSpan="9">
				<column>Documentation</column>
				<column>Components</column>
			</bottomNav>
			<bottomDescription>
		        <![CDATA[
		          ${ecosystemNameHighlight}
		          is a modular, plugin-based, full-featured solution to improve
		          development & management of TIBCO applications.
		        ]]>
			</bottomDescription>

			<endContent>
				<script type="text/javascript" src="$resourcePath/js/highlight.min.js"></script>
				<script type="text/javascript" src="$resourcePath/js/custom.js"></script>
			</endContent>

			<pages>
				<index>
					<titleTemplate>${ecosystemName}</titleTemplate>
					<markPageHeader>false</markPageHeader>
					<sections>
						<body />
						<thumbs>2</thumbs>
						<thumbs>2</thumbs>
					</sections>
				</index>
			</pages>
		</reflowSkin>
	</custom>

	<bannerLeft>
		<name>
          <![CDATA[
          ${siteTopCaption}
          ]]>
		</name>
		<href>./index.html</href>
	</bannerLeft>

